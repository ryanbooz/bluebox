# Required: Your TMDB API key (get one at https://www.themoviedb.org/settings/api)
TMDB_API_KEY=your_api_key_here

# Database connection
DB_NAME=bluebox
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_PORT=5432

# Optional: TMDB discover filter overrides
# TMDB_MIN_VOTE_AVERAGE=5.5
# TMDB_MIN_VOTE_COUNT=20
# TMDB_MAX_CERTIFICATION=PG-13
# TMDB_LANGUAGE=en-US
# TMDB_REGION=US
# TMDB_ORIGINAL_LANGUAGE=en

# Optional: Rate limiting (seconds between API calls)
# API_RATE_LIMIT=0.5
