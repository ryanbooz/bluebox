# Database connection
DB_NAME=bluebox
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_PORT=5432

# Connection pool sizing
# POOL_MIN_SIZE=2
# POOL_MAX_SIZE=10

# Worker threads — number of concurrent dispatch loops
# WORKER_THREADS=4

# OpenTelemetry (optional — tracing disabled when endpoint is not set)
# OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io
# OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your_api_key
# OTEL_SERVICE_NAME=bluebox-load

# Timezone for schedule calculations (IANA timezone name)
# TIMEZONE=America/New_York

# Schedule parameters
# BASE_RPM=60
# NIGHT_MULTIPLIER=0.1
# EVENING_MULTIPLIER=2.5
# HOLIDAY_MULTIPLIER=3.0
